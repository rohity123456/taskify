generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  email          String   @unique
  password       String   
  tasksAssigned  Task[]   @relation("TasksAssigned")
  taskModified   Task[]   @relation("TaskModified")
}

model Task {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  description    String
  status         Status   @default(PENDING)
  priority       String?  @default("medium") 
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt @default(now())
  dueAt          DateTime

  assignedTo     User     @relation("TasksAssigned", fields: [assignedToId], references: [id])
  assignedToId   String  @db.ObjectId
  modifiedBy     User     @relation("TaskModified", fields: [modifiedById], references: [id])
  modifiedById    String   @db.ObjectId
}


enum Status {
  PENDING
  IN_PROGRESS
  DONE
}